<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="ToolbarTextView">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">@dimen/actionbar_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/iransans</item>
    </style>

    <style name="HistoryItemTextView">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="WeekNameTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textColor">@color/colorText3</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>
